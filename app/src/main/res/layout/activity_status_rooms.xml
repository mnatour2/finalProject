<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRoom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>

                <TextView
                    android:layout_marginTop="30dp"                    android:layout_margin="10dp"
                    android:textSize="16dp"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of bed" />

                <EditText
                    android:layout_marginTop="30dp"                    android:layout_margin="10dp"
                    android:id="@+id/bed"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:inputType="text" />
            </TableRow>

            <TableRow>

            <TextView
                android:layout_marginTop="15dp"                android:layout_margin="10dp"
                android:textSize="16dp"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of bathrooms" />

                <EditText
                    android:id="@+id/baths"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="15dp"
                    android:inputType="text" />


            </TableRow>

            <TableRow>

            <TextView
                android:layout_marginTop="15dp"                android:layout_margin="10dp"
                android:textSize="16dp"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Has balcony" />

            <EditText
                android:layout_marginTop="15dp"                android:layout_margin="10dp"
                android:id="@+id/balcony"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:inputType="text" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginTop="15dp"                    android:layout_margin="10dp"
                    android:textSize="16dp"
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description" />

                <EditText
                    android:layout_marginTop="15dp"                    android:layout_margin="10dp"
                    android:id="@+id/description"
                    android:layout_width="297dp"
                    android:layout_height="193dp"
                    android:inputType="text" />

            </TableRow>

            <Button
                android:layout_marginTop="15dp"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:onClick="addRoom"
                android:text="Add room"
                android:textSize="16dp" />

        <TableRow>
            <Button
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:onClick="back2"
                android:text="Back"
                android:textSize="16dp" />
        </TableRow>

        </TableLayout>

    </LinearLayout>

</FrameLayout>