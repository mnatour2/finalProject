<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="2"
        tools:layout_editor_absoluteX="-132dp"
        tools:layout_editor_absoluteY="34dp">

        <Button
            android:id="@+id/manageCustomers"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="left|top"
            android:layout_margin="5dp"
            android:backgroundTint="@color/purple_200"
            android:text="Manage Customers"
            android:onClick="onManageCustomers"/>

        <Button
            android:id="@+id/manageRooms"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="left|top"
            android:layout_margin="5dp"
            android:backgroundTint="@color/purple_200"
            android:text="Manage Rooms"
            android:onClick="onManageRooms"/>

        <Button
            android:id="@+id/manageRoomService"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="left|top"
            android:layout_margin="5dp"
            android:backgroundTint="@color/purple_200"
            android:text="Manage Room Services"
            android:onClick="onManageRoomService"/>

        <Button
            android:id="@+id/imageButton6"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="left|top"
            android:layout_margin="5dp"
            android:backgroundTint="@color/purple_200"
            android:text="Search"
            android:onClick="onSearch"/>


    </GridLayout>

</androidx.appcompat.widget.LinearLayoutCompat>